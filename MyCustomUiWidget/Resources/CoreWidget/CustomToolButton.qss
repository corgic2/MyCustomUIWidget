/* CustomToolButton 样式定义 */

CustomToolButton {
    border: 1px solid rgba(@dark_color, 0.4);
    border-radius: 4px;
    background-color: transparent;
    color: rgb(@dark_color);
    font-family: "Microsoft YaHei";
    font-size: 12px;
    padding: 2px 2px;
    min-width: 24px;
    min-height: 30px;
}

CustomToolButton:hover {
    background-color: rgba(@hover_background_color, 0.8);
    border: 1px solid rgba(@info_color, 0.8);
}

CustomToolButton:pressed {
    background-color: rgba(@info_color, 0.2);
    border-color: rgba(@info_color, 0.4);
}

CustomToolButton:checked {
    background-color: rgb(@info_color);
    color: rgb(@white_color);
    border-color: rgba(@dark_color, 0.4);
}

CustomToolButton:disabled {
    background-color: transparent;
    color: rgb(@disabled_color);
    border: 1px solid rgba(@dark_color, 0.4);
}

